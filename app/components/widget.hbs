      </svg>
      {{this.data.title}}
    </h1>
    {{#if this.data.category}}
    <p class="au-w-header__info">
      <span class="au-w-header__rating">{{this.data.category}}</span> {{#if this.data.rating}}<span class="au-w-header__rating au-w-header__rating--base">{{this.data.rating}}</span>{{/if}}
    </p>
    {{/if}}
  </div>
  <ul class="au-w-grid au-w-grid--divider au-u-margin-bottom-small">
    {{#each this.data.criteriaGroups as |cGroup|}}
      <li class="au-w-grid__item">
        <h2 class="au-u-hidden-visually">{{cGroup.title}}</h2>
        {{#each cGroup.criteria as |criteria|}}
          <AuModal @title="{{criteria.title}}" @id="{{criteria.id}}" @check="{{criteria.status}}" @theme="{{criteria.theme}}">
            {{{criteria.description}}}
            <ul class="au-w-criterium-list">
              {{#each criteria.criteriaItems as |cItem|}}
                <AuCriteriaItem @criterium="{{cItem.title}}" @check="{{cItem.status}}">
                  {{#if cItem.contents}}
                    {{{cItem.contents}}}
                  {{else}}
                    <p class="au-w-info-text">Geen extra info beschikbaar.</p>
                  {{/if}}
                  <ul class="au-w-criterium-list">
                    {{#each cItem.criteriaSubItems as |cSItems|}}
                      <AuCriteriaSubitem @criterium="{{cSItems.title}}" @check="{{cSItems.status}}">
                      </AuCriteriaSubitem>
                    {{/each}}
                  </ul>
                </AuCriteriaItem>
              {{/each}}
            </ul>
          </AuModal>
        {{/each}}
      </li>
    {{/each}}
  </ul>
  <p class="au-w-footer">Deze informatie is aangeleverd door Toevla. <a href="https://toevla.vlaanderen.be/publiek/nl/register/detail/3147" class="au-w-link au-w-link--neutral">Meer info</a></p>
</section>
